{
  "repositories": [
	{
      "type": "composer",
      "url": "http://wpackagist.org"
    },
	{
		"type" : "git",
		"url" : "https://github.com/CezaryH/wordpress-gulp-theme-boilerplante"
	},
	{
		"type" : "git",
		"url" : "https://github.com/CezaryH/installer"
	},	
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "wordpress-core",
        "version": "3.9",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/3.9.1.zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.3.0",
	"CezaryH/installer" : "dev-master",
	"wordpress": "3.9",
	"jarednova/timber" : "*",
	"CezaryH/wordpress-gulp-theme-boilerplante" : "dev-master"
  },
    "scripts": {
        "post-install-cmd": "Wordpress\\Composer\\InstallerTasks::wpConfig"
    },
    "extra": {
        "wordpress_wp_config": {
        	"WP_DEFAULT_THEME" : "Default Theme",
            "site_url": "http://wpauto.loc",
            "db_host": "localhost",
            "db_user": "root",
            "db_pass": "root",
            "db_name": "wpauto"
        }
    },
  "minimum-stability" : "dev"
}